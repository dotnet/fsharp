    <Compile Include="Hints\InlineParameterNameHintTests.fs" />
    <Compile Include="Hints\InlineTypeHintTests.fs" />
    <Compile Include="Hints\OverallHintExperienceTests.fs" />
    <Compile Include="EditorFormattingServiceTests.fs" />
