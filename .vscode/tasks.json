{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/d",
                    "/c"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build (Debug)",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "-c Debug",
                "FSharp.Compiler.Service.sln"
            ],
            "windows": {
                "command": "dotnet",
                "args": [
                    "build",
                    "-c Debug",
                    "FSharp.Compiler.Service.sln"
                ],
            },
            "problemMatcher": "$msCompile",
            "group": "build",
        },
        {
            "label": "Build (Release)",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "-c Release",
                "FSharp.Compiler.Service.sln"
            ],
            "windows": {
                "command": "dotnet",
                "args": [
                    "build",
                    "-c Release",
                    "FSharp.Compiler.Service.sln"
                ],
            },
            "problemMatcher": "$msCompile",
            "group": "build",
        },
        {
            "label": "Update xlf files",
            "command": "./build.sh",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/Build.cmd"
            },
            "options": {
                "env": {
                    "UpdateXlfOnBuild": "true"
                }
            },
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}